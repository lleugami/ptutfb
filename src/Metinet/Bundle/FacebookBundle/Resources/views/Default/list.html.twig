{% extends '::base.html.twig' %}

{% block body %}
<h3>List des Quizz </h3>
<h5><img src="/uploads/images/mini/theme/mini_{{ img_theme }}" /> <br />Thème : {{ titre_theme }} <br /> {{ nb_quizz }} quizz <br /> {{ desc_theme }} </h5>
	<ul>
	{% for quizzs in quizz %}
		<li><img src="/uploads/images/mini/quizz/mini_{{ quizzs.picture }}" />  {{ quizzs.title }}
			<ol><b>Description :</b> {{ quizzs.longDesc }} </ol>
			<ol><b>Nombre de question :</b> {{ nb_question[quizzs.id] }} </ol>
			<ol><b>Nombre de points :</b> {{ quizzs.winPoints }} </ol>
			<ol>Participant :
			{% if img_user[quizzs.id] is defined %}
				{% for img in img_user %}
					{% for imgs in img %}
						<img src="{{ imgs.picture }}" title="{{ imgs.firstname }} {{ imgs.lastname }}" /> <br />
					{% endfor %}
				{% endfor %}
			{% else %}
				Aucun amis a participé à ce quizz
			{% endif %}
			</ol>
			<ol><a href="#">Défier ses amis !</a></ol>
		</li>
		<br />
		<br />
	{% endfor %}
	</ul>

{% endblock %}