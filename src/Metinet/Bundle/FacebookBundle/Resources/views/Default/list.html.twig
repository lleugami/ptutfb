{% extends '::base.html.twig' %}

{% block body %}

<h3>List des Quizz </h3>
<h5><img src="/uploads/images/mini/theme/mini_{{ img_theme }}" /> <br />Th√®me : {{ titre_theme }} <br />Nombre de quizz : {{ nb_quizz }} quizz <br /> Description :{{ desc_theme }} </h5>
	<ul>
	{% for quizzs in quizz %}
            <li><img src="/uploads/images/mini/quizz/mini_{{ quizzs.picture }}" />  {{ quizzs.title }}
                <ol><b>Description :</b> {{ quizzs.longDesc }} </ol>
                <ol><b>Nombre de question :</b> {{ nb_question[quizzs.id] }} </ol>
                <ol><b>Nombre de points :</b> {{ quizzs.winPoints }} </ol>
                {% if nb_question[quizzs.id] != 0 %}
                <ol>
                {% if user[quizzs.id] is defined and user[quizzs.id]|length != 0 %}
                    Participant :
                    {% for users in user[quizzs.id] %}
                        <img src="{{ users }}" />
                    {% endfor %}
                {% endif %}
                </ol>
                <ol>
                    <a href="{{ path("start_quizz", {"id":quizzs.id}) }}">Jouer</a>
                </ol>
                {% endif %}
            </li>
            <br />
            <br />
	{% endfor %}
	</ul>

{% endblock %}