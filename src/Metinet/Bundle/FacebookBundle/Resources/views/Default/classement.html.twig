    </ul>
</div><br/>

    <h1>Ma position</h1>
    <div style="position: relative">
    <img src="{{ asset('/bundles/metinetgalery/image/up.png') }}" style="width: 50px; position: absolute; right: 0; top: -20px; cursor: pointer;" onclick="$('#table_pagination_general').scrollTop($('#table_pagination_general').scrollTop()-350);"/>
    <div id="table_pagination_general" style="padding: 10px 0 10px 0;max-height:300px; overflow: hidden;">
    
    <table>
    {% for user in classement %}
        <tr>
            <td><p class="rankNum">{{ user.rang }} {% if user.rang != 1 %}ème{% else %}er{% endif %}</p></td>
            <td><img src="{{ user.picture }}" alt="{{ user.firstname }} {{ user.lastname }}" /></td>
            <td><p>{{ user.firstname }} {{ user.lastname }}</p></td> 
            <td><p class="userScore">{{ user.points }} pts </p></td>
        </tr>
    {% endfor %}
    </table>
        
    </div>
    <img src="{{ asset('/bundles/metinetgalery/image/down.png') }}" style="width: 50px; position: absolute; right:0; bottom: -20px;cursor: pointer;" onclick="$('#table_pagination_general').scrollTop($('#table_pagination_general').scrollTop()+350);"/>
