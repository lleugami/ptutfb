{% extends '::base.html.twig' %}

{% block body -%}
    <h1>D&eacute;tails d'un quizz</h1>
    <table class="record_properties">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ quizz.title }}</td>
            </tr>
            <tr>
                <th>Image du quizz</th>
                <td><img src="/uploads/images/quizz/mini/mini_{{ quizz.picture }}" /></td>
            </tr>
            <tr>
                <th>Description du quizz</th>
                <td>{{ quizz.longDesc }}</td>
            </tr>
            <tr>
            	<td>nombre de questions dans ce quizz</td>
            	<td>{{ countQuestion }}</td>
            </tr>
       </tbody>
    </table>
    {% if countclassementamis > 0 %}
    	<h4>Classement entre amis</h4>
	    <table>
	        <tr>
	        	
	            {% for user in classementAvecAmis %}
	                <td>
	                    <img src="{{ user.picture }}" alt="{{ user.firstname }} {{ user.lastname }}" />
	                    <p>{{ user.points }} pts </p>
	                </td>
	            {% endfor %}
	        </tr>
	    </table>
	{% else %}
		<a href = "#">D&eacute;fier un ami!</a>
	{% endif %}
{% endblock %}