{% extends '::base.html.twig' %}
{% block body %}
	<h1>Tableau De Bord</h1>

	<img class="infoImage" src="{{asset('/bundles/metinetgalery/image/User.png')}}">
	<div class="infoAppli">
	Nombre total de joueur : <span class="spanresult">{{ nombretotal }}</span><br/>
	Nouveaux joueurs ces 7 derniers jours :  <span class="spanresult">{{ nombretotalsept }}</span><br/>
	Nouveaux joueurs ces 30 derniers jours :  <span class="spanresult">{{ nombretotaltrente }}</span><br/>
	</div>
	<img class="infoImage" src="{{asset('/bundles/metinetgalery/image/Stats.png')}}">
	<div class="infoAppli">
	Nombre de quizz :  <span class="spanresult">{{ nbquizz }}</span><br/>
	Score moyen des joueurs : <span class="spanresult"> {{ scoremoyen }} </span><br/>
	Nombre de quizz en cours : <span class="spanresult"> {{ totquizzlancer }} </span><br/>
	</div>
	<div id="topQuizz">
	<img class="rankQuizz" src="{{asset('/bundles/metinetgalery/image/Upload.png')}}">
	<h3>Le TOP 3 des quizz : </h3>
		<div class="listQuizz">
			<ul>
				{% for entity in tabquizzpop %}
					<li><a href = "{{ path('quizz_show', { 'id': entity.id }) }}">{{ entity.id }} - {{ entity.title }}</a></li>
				{% endfor %}
			</ul>
		</div>
	</div>
	<div id="flopQuizz">
	<img class="rankQuizz" src="{{asset('/bundles/metinetgalery/image/Download.png')}}">
	<h3>Le FLOP 3 des quizz :</h3>
		<div class="listQuizz">
			<ul>
				{% for entity in tabquizzflop %}
					<li><a href = "{{ path('quizz_show', { 'id': entity.id }) }}">{{ entity.id }} - {{ entity.title }}</a></li>
				{% endfor %}
			</ul>
		</div>
	</div>
	<div id="lastUser">
		<img class="lastUser" src="{{asset('/bundles/metinetgalery/image/Temporary.png')}}">
		<h3>Les 10 Derniers Joueurs inscrits</h3>
		<ul>
			{% for entity in tablasttenpers %}
				<li><a><img src = "{{ entity.picture }}"></a></li>
			{% endfor %}
		</ul>
	</div>

<a href="{{ path('quizz') }}">Gestion des Quizz</a>
<br />
<a href="{{ path('theme') }}">Gestion des Thémes</a>
<br/>
<a href="{{ path('admin_question') }}">Gestion des Questions</a>
<br/>
<a href="{{ path('admin_answer') }}">Gestion des Réponses</a>

{% endblock %}