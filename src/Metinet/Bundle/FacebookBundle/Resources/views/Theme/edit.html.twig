{% extends '::base.html.twig' %}

{% block body -%}
    <img class="logoSmall" src="{{asset('/bundles/metinetgalery/image/logo-pt.png')}}">
    <h1>Edition d'un thème</h1>
    <div id="formQuizz">
    <form action="{{ path('theme_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <a href="#" class="button-bevel orange"><button type="submit">Modifier</button></a>
        </p>
    </form>
    <form action="{{ path('theme_delete', { 'id': entity.id }) }}" method="post">
        <a href="#" class="button-bevel orange"><input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button type="submit">Delete</button></a>
    </form>
    <div id="btnNewTheme">
        <ul class="ca-menu">
            <li>
                <a href="{{ path('theme') }}">
                    <div class="ca-content">
                        <h3 class="ca-sub">Retourner à la liste</h3>
                    </div>
                </a>
            </li>
        </ul>
    </div>
{% endblock %}
