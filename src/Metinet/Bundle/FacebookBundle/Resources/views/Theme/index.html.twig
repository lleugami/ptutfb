{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Theme list</h1><a href="{{ path('admin') }}">Tableau De Bord</a>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Picture</th>
                <th>Shortdesc</th>
                <th>Longdesc</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('theme_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td><img src="/uploads/images/mini/mini_{{ entity.picture }}" /></td>
                <td>{{ entity.shortDesc }}</td>
                <td>{{ entity.longDesc }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('theme_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('theme_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('theme_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
