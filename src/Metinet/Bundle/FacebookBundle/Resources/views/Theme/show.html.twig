{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Theme</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td><img src="/uploads/images/mini/theme/mini_{{ entity.picture }}" /></td>
            </tr>
            <tr>
                <th>Shortdesc</th>
                <td>{{ entity.shortDesc }}</td>
            </tr>
            <tr>
                <th>Longdesc</th>
                <td>{{ entity.longDesc }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('theme') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('theme_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('theme_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
    
{% if listeQuizz %}
<h2>Liste des Quizz</h2>
<ul>
{% for quizz in listeQuizz %}
    <li>
        {{ quizz.title }}
        <a href="{{ path('quizz_edit', { 'id': quizz.id }) }}">
            Editer
        </a>
    </li>
{% endfor %}
</ul>
{% endif %}
    
{% endblock %}
