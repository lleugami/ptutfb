            {% block javascripts %}
            <script type="text/javascript">
              window.fbAsyncInit = function() {
                // init the FB JS SDK
                FB.init({
                  appId      : '{{ app_id }}',
                  channelUrl : '//{{ urlinterne }}/channel.php',
                  status     : true,
                  xfbml      : true
                });
     
                FB.Canvas.setAutoGrow();
              };


              function publier(name,link,picture,caption,description){
                FB.ui(
                {
                  method: 'feed',
                  name: name,
                  link: link,
                  picture: picture,
                  caption: caption,
                  description: description
                }
                );
              }

              function rejoindre(message){
                FB.ui(
                {
                  method: 'apprequests',
                  message: message,
                }, requestCallback);
              }

              function requestCallback(){}

            </script>
            {% endblock %}
